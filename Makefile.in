CC = @CC@
RM = @RM@
CP = @CP@
MKDEP = ${CC} -MM

TCMLIBS = @LIBS@
INCLUDES = -I@SRCDIR@/include
CPPFLAGS = ${INCLUDES} @CPPFLAGS@

# GNU CC allows us to use -g with -O
CFLAGS = @CFLAGS@

prefix = @prefix@
# Debugers can uncomment this line for paranoid output
# CPPFLAGS = ${INCLUDES} -Wunused -Wall -ggdb -Wshadow -Wmissing-declarations

###### CHANGES BELOW HERE ONLY IF YOU KNOW WHAT YOU'RE DOING ######

SUBDIRS = src tools

OBJECTS = ${SOURCES:.c=.o}

all: tcm

build: tcm

install: tcm
	@echo Installing...
	-@if [ ! -x $(prefix) ] ; then \
	echo mkdir -p $(prefix) ; \
	mkdir -p $(prefix) ; \
	fi

	-@if [ ! -x $(prefix)/bin ] ; then \
	echo mkdir -p $(prefix)/bin ; \
	mkdir -p $(prefix)/bin ; \
	fi

	-@if [ ! -x $(prefix)/etc ] ; then \
	echo mkdir -p $(prefix)/etc ; \
	mkdir -p $(prefix)/etc ; \
	fi


	-@if [ ! -x $(prefix)/help ] ; then \
	echo mkdir -p $(prefix)/help ; \
	mkdir -p $(prefix)/help ; \
	fi

	-@if [ ! -x $(prefix)/logs ] ; then \
	echo mkdir -p $(prefix)/logs ; \
	mkdir -p $(prefix)/logs ; \
	fi

	mv -f bin/tcm bin/mkpasswd $(prefix)/bin/

	-@if [ ! -e $(prefix)/etc/tcm.cf ] ; then \
	echo ${CP} etc/tcm.cf $(prefix)/etc/ ; \
        ${CP} etc/tcm.cf $(prefix)/etc/ ; \
        fi

	-@if [ ! -e $(prefix)/etc/userlist.cf ] ; then \
	echo ${CP} etc/userlist.cf $(prefix)/etc/ ; \
	${CP} -f etc/userlist.cf $(prefix)/etc/ ; \
	fi

	-@if [ ! -e $(prefix)/etc/dynamic.hosts ] ; then \
	echo ${CP} etc/dynamic.hosts $(prefix)/etc/ ; \
	${CP} -f etc/dynamic.hosts $(prefix)/etc/ ; \
	fi

	${CP} help/help.* help/help $(prefix)/help/
	@echo Done

clean:
	@${RM} -f DEBUG etc/tcm.pid tcm.core ktrace.out core
	@for i in $(SUBDIRS); do \
		echo "Cleaning $$i";\
		cd $$i;\
		${MAKE} clean; cd ..;\
	done
	-@if [ -f include/setup.h ] ; then \
	echo "To really restart installation, make distclean" ; \
	fi

distclean:
	@for i in $(SUBDIRS); do \
		echo "Distcleaning $$i";\
 		cd $$i;\
		${MAKE} distclean; cd ..;\
	done
	${RM} -f Makefile configure.lineno config.status config.cache config.log include/setup.h etc/tcm.pid
	${RM} -f DEBUG bin/tcm bin/mkpasswd etc/*.pref logs/*log logs/clone_log_* logs/tcm.log*
	${RM} -f ktrace.out tcm.core core
	${RM} -rf autom4te.cache

.c.o:
	${CC} ${CPPFLAGS} ${CFLAGS} ${DEFINES} -c $<

tcm: include/setup.h
	@for i in $(SUBDIRS); do \
		echo "Building $$i";\
		cd $$i && ${MAKE} build || exit; cd ..; \
	done

include/setup.h:
	sh configure

lint:
	@for i in $(SUBDIRS); do \
		echo "Linting $$i";\
		cd $$i;\
		${MAKE} lint; cd ..;\
	done

depend:
	@for i in $(SUBDIRS); do \
		echo "Making Dependencies in $$i";\
		cd $$i;\
		${MAKE} depend; cd ..;\
	done

.PHONY: clean distclean all build lint depend install
