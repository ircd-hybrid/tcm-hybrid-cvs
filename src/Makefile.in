# $Id: Makefile.in,v 1.38 2003/08/17 02:59:07 joshk Exp $

CC = @CC@
RM = @RM@
MKDEP = ${CC} -MM

TCMLIBS = @LIBS@
INCLUDES = -I../include
CPPFLAGS = ${INCLUDES} @CPPFLAGS@

CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@

###### CHANGES BELOW HERE ONLY IF YOU KNOW WHAT YOU'RE DOING ######

SOURCES =       @UTIL_C@	\
		actions.c	\
		bothunt.c       \
		clones.c	\
		client_list.c	\
		dcc.c		\
		dcc_commands.c	\
		event.c		\
		handler.c	\
		hash.c		\
		ipv6.c		\
		logging.c       \
		main.c		\
		match.c		\
		modules.c	\
		parse.c		\
		respond.c	\
		seedrand.c	\
		serv_commands.c	\
		services.c	\
		skline.c	\
		stdcmds.c	\
		tcm_io.c	\
		tools.c		\
		userlist.c	\
		vclones.c	\
		wild.c		\
		wingate.c

OBJECTS = ${SOURCES:.c=.o}

all: build

clean: 
	${RM} -f *.o tcm core tcm.core *~

distclean: clean
	${RM} -f Makefile

.c.o:
	${CC} ${INCLUDES} ${CFLAGS} ${DEFINES} -c $<

build: ${OBJECTS}
	${CC} ${CFLAGS} ${LDFLAGS} -o ../bin/tcm ${OBJECTS} ${TCMLIBS}

lint:
	lint -aacgprxhH $(INCLUDES) $(DEFINES) $(SOURCES) >../lint.out

depend:
	${MKDEP} ${INCLUDES} ${SOURCES} > .depend

include .depend

.PHONY: distclean build depend clean lint all

