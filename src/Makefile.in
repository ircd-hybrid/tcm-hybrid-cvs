# $Id: Makefile.in,v 1.44 2004/06/10 23:20:22 bill Exp $

CC = @CC@
RM = @RM@
MKDEP = ${CC} -MM

TCMLIBS = @LIBS@
INCLUDES = -I../include
CPPFLAGS = ${INCLUDES} @CPPFLAGS@

CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@

LEX = @LEX@
YACC = @YACC@

###### CHANGES BELOW HERE ONLY IF YOU KNOW WHAT YOU'RE DOING ######

y.tab.o: y.tab.c tcm_parser.y
	${CC} ${CFLAGS} ${CPPFLAGS} -I. -c y.tab.c

y.tab.c: tcm_parser.y
	${YACC} -d tcm_parser.y

lex.yy.o: y.tab.c lex.yy.c tcm_lexer.l
	${CC} ${CFLAGS} ${CPPFLAGS} -I. -c lex.yy.c

lex.yy.c: tcm_lexer.l
	${LEX} tcm_lexer.l

SOURCES =       actions.c	\
		bothunt.c       \
		clones.c	\
		client_list.c	\
		conf.c		\
		dcc.c		\
		dcc_commands.c	\
		event.c		\
		handler.c	\
		hash.c		\
		ipv6.c		\
		logging.c       \
		main.c		\
		match.c		\
		parse.c		\
		@RESPOND_C@	\
		seedrand.c	\
		serv_commands.c	\
		services.c	\
		skline.c	\
		stdcmds.c	\
		tcm_io.c	\
		tools.c		\
		userlist.c	\
		@UTIL_C@	\
		vclones.c

OBJECTS = ${SOURCES:.c=.o}

all: build

clean: 
	${RM} -f *.o *~ y.tab.? lex.yy.c

distclean: clean
	${RM} -f Makefile

.c.o:
	${CC} ${INCLUDES} ${CFLAGS} ${DEFINES} -c $<

build: ${OBJECTS} y.tab.o lex.yy.o
	${CC} ${CFLAGS} ${LDFLAGS} -o ../bin/tcm ${OBJECTS} lex.yy.o y.tab.o ${TCMLIBS}

lint:
	lint -aacgprxhH $(INCLUDES) $(DEFINES) $(SOURCES) >../lint.out

depend:
	${MKDEP} ${INCLUDES} ${SOURCES} > .depend

include .depend

.PHONY: distclean build depend clean lint all

