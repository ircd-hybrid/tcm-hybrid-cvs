
CC = @CC@
RM = @RM@
MKDEP = ${CC} -MM

TCMLIBS = @LIBS@
INCLUDES = -I../include
CPPFLAGS = ${INCLUDES} @CPPFLAGS@

# Any other defines you need, add below.
DEFINES =

# -O for optimization.  Can't debug.  Use -g for debuggable code.
CFLAGS = -g -O2

# Debuggers CFLAGS
# CFLAGS = -g -O -Wunused -Wall -ggdb -Wshadow -Wmissing-declarations

###### CHANGES BELOW HERE ONLY IF YOU KNOW WHAT YOU'RE DOING ######

SOURCES = 	main.c\
		logging.c\
		stdcmds.c\
		token.c\
		userlist.c\
		wild.c

OBJECTS = ${SOURCES:.c=.o}

all: build

clean: 
	${RM} -f *.o tcm core tcm.core *~

distclean: clean
	${RM} -f Makefile

.c.o:
	${CC} ${CPPFLAGS} ${CFLAGS} ${DEFINES} -c $<

build: ${OBJECTS}
	${CC} ${CFLAGS} -o ../bin/tcm ${OBJECTS} ${TCMLIBS}

lint:
	lint -aacgprxhH $(CPPFLAGS) $(SOURCES) >../lint.out

depend:
	${MKDEP} ${INCLUDES} ${SOURCES} > .depend

include .depend

